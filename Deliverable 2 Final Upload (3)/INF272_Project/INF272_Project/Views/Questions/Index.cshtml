@model IEnumerable<INF272_Project.Models.Question>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <style>
        body {
            background-image: url('../../Content/21074350-modern-white-background-seamless-patterns.jpg');
        }

        h1 {
            color: midnightblue;
            text-align: left;
            font-family: 'Comic Sans MS'
        }

        h2 {
            color: midnightblue;
            text-align: left;
            font-family: 'Comic Sans MS';
        }

        label {
            color: midnightblue;
            font-family: Calibri;
        }

        p {
            font-size: 20px;
            font-family: Calibri;
            color: midnightblue;
        }

        table {
            width: 70%;
        }

        th, td {
            padding: 15px;
            text-align: left;
        }

        th {
            background-color: midnightblue;
            font-family: 'Comic Sans MS';
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
<h2>Questions</h2>

<p>
    @Html.ActionLink("Add Question", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Question
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Question1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Answer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grade.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.QuestionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.QuestionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.QuestionID })
        </td>
    </tr>
}

</table>
<input onclick="@("window.location.href='" + @Url.Action("adminHome", "Star") + "'");" type="submit" value="Back" />