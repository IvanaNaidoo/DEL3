@model List<INF272_Project.ViewModels.QuestionViewModel>
@{
    ViewBag.Title = "UserHWResults";
}
<style>
    body {
        background-image: url('../../Content/21074350-modern-white-background-seamless-patterns.jpg');
    }

    h1 {
        color: midnightblue;
        text-align: left;
        font-family: 'Comic Sans MS'
    }

    h2 {
        color: midnightblue;
        text-align: left;
        font-family: 'Comic Sans MS';
        align-content: center;
    }

    label {
        color: midnightblue;
        font-family: Calibri;
        font-size: 20px;
        align-content: center;
    }

    p {
        font-size: 20px;
        font-family: Calibri;
        color: midnightblue;
    }

    table {
        width: 70%;
    }

    th, td {
        padding: 15px;
        text-align: left;
    }

    th {
        background-color: midnightblue;
        font-family: 'Comic Sans MS';
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>

<h1>STAR kidZ</h1>
<h2>The correct answers are: </h2>
<div>
    <table>
        <tr>
            <th>Question</th>
            <th>Max Marks</th>
            <th>Answer</th>
            <th>Your Score</th>
        </tr>
        <tr>



            <th>Subject</th>
            <th>Question</th>
            <th>Max Marks</th>
            <th>Correct Answer</th>
        </tr>
        <tr>
            @{
                foreach (var item in Model)
                {


                    <td>@item.Subject</td>
                    <td>@item.Question</td>
                    <td>@item.Marks</td>

                    <td>@item.Answer</td>

                }

            </tr>

        </table>
    </div>
    <input onclick="@("window.location.href='" + @Url.Action("home", "Star") + "'");" type="submit" value="Back to homepage" />

